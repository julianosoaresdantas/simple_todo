<%= form_with(model: @waste_entry, local: true) do |form| %>
  <% if form.object.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(form.object.errors.count, "error") %> prohibited this waste entry from being saved:</h2>
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :waste_type, class: 'form-label' %><br>
    <%= form.select :waste_type, options_for_select(['Organic', 'Plastic', 'Paper', 'Glass', 'Metal', 'Electronic', 'Hazardous', 'Other'], form.object.waste_type), { prompt: 'Select Waste Type' }, { class: 'form-select' } %>
  </div>

  <div class="mb-3">
    <%= form.label :quantity, class: 'form-label' %><br>
    <%= form.number_field :quantity, step: :any, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :unit, class: 'form-label' %><br>
    <%= form.text_field :unit, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :entry_date, class: 'form-label' %><br>
    <%= form.date_field :entry_date, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :notes, class: 'form-label' %><br>
    <%= form.text_area :notes, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>